<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/..</directory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${basedir}/src/main/resources/log4j.xml</source>
      <outputDirectory>lib</outputDirectory>
    </file>
    <!-- filtered=true, so we do variable expansion so the yarn package path 
      always points to the correct spot on any machine -->
    <file>
      <source>${basedir}/src/main/config/entity-batch-service.properties</source>
      <outputDirectory>config</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${basedir}/src/main/config/entity-storage-service.properties</source>
      <outputDirectory>config</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${basedir}/src/main/config/response-accumulator-service.properties</source>
      <outputDirectory>config</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${basedir}/src/main/config/schema-learning-partitioner-service.properties</source>
      <outputDirectory>config</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${basedir}/src/main/config/schema-learning-service.properties</source>
      <outputDirectory>config</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${basedir}/src/main/config/schema-storage-service.properties</source>
      <outputDirectory>config</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.apache.samza:samza-shell:tgz:dist:*</include>
      </includes>
      <fileMode>0744</fileMode>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.apache.samza:samza-core_${scala.version}</include>
        <include>org.apache.samza:samza-kafka_${scala.version}</include>
        <include>org.apache.samza:samza-serializers_${scala.version}</include>
        <include>org.apache.samza:samza-yarn_${scala.version}</include>
        <include>org.apache.samza:samza-kv_${scala.version}</include>
        <include>org.slf4j:slf4j-log4j12</include>
        <include>org.apache.kafka:kafka_${scala.version}</include>
        <include>org.apache.hadoop:hadoop-hdfs</include>
        <include>${project.groupId}:debezium-services</include>
      </includes>
      <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>
  </dependencySets>
</assembly>
